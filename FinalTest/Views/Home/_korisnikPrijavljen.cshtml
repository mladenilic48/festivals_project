
<div id="kadaJePrijavljen">
    <div class="row">
        <div class="col-md-offset-1 col-md-10">
            <p id="ispisPrijavljenKorisnik" style="display:inline-block;"></p>
            <button id="btnOdjava" class="btn btn-default" style="float:right; width:150px">Odjava</button>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h3 class="text-center">Festivali</h3>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr style="background-color:gray">
                        <th>Naziv</th>
                        <th>Mesto</th>
                        <th>Godina</th>
                        <th>Cena</th>
                        <th>Akcija</th>
                    </tr>
                </thead>
                <tbody id="tableBodyFestivaliExtend"></tbody>
            </table>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-offset-1 col-md-10">
            <h3 class="text-center">Pretraga festivala</h3>
            <div class="col-md-6" style="display:inline-block">
                <label>Start:</label>&nbsp;&nbsp;
                <input id="start" type="number" style="width:100px" />&nbsp;&nbsp;

                <label>Kraj:</label>&nbsp;&nbsp;
                <input id="kraj" type="number" style="width:100px;" />
            </div>
            <div class="col-md-6" style="display:inline-block">
                <button id="btnPretraga" class="btn btn-default" style="float:right; width:150px">Pretraga</button>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-offset-3 col-md-offset-4 col-xs-7 col-sm-6 col-md-4 " id="dodavanjeKorisnika">
            <form method="post" action="post/" id="frmDodavanjeKorisnika">
                <h3 class="text-center">Dodavanje novog festivala</h3>
                <br /><br />
                <div class="form-group">
                    <label>Naziv:</label>
                    <input type="text" id="nazivFestivala" style="float:right;" />
                </div>
                <div class="form-group">
                    <label>Cena karte:</label>
                    <input type="number" step="any" id="cenaKarte" style="float:right; width:100px;" />
                </div>
                <div class="form-group">
                    <label>Prvo odrzavanje:</label>
                    <input type="number" id="prvoOdrzavanje" style="float:right; width:100px;" />
                </div>
                <div class="form-group">
                    <label>Mesto:</label>
                    <select id="selectMesto" style="float:right"></select>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" class="btn btn-default col-md-offset-1 col-md-4" value="Dodavanje" />
                    <input id="btnOdustajanje" type="button" class="btn col-md-offset-2 col-md-4" style="color:white; background-color:black;" value="Odustajanje" />
                </div>
            </form>
        </div>
    </div>

</div>